<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- App branding color for the app bar -->
        <item name="colorPrimary">#000000</item>
        <!-- Darker variant for the status bar and contextual app board -->
        <item name="colorPrimaryDark">#000000</item>
        <!-- Theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">#000000</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- RelativeLayout style -->
    <style name="RelativeLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">@dimen/paddingTop</item>
        <item name="android:paddingBottom">@dimen/paddingBottom</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- RelativeLayout style2 -->
    <style name="RelativeLayoutStyle2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/layout_marginLeft</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- TextView style1 -->
    <style name="TextViewStyle1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_sizeSmall</item>
    </style>

    <!-- TestViewAnswer style -->
    <style name="TextViewAnswerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/layout_marginLeft_textview</item>
        <item name="android:paddingBottom">@dimen/paddingBottom_textview</item>
        <item name="android:text">@string/zero</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_size_textview</item>
    </style>

    <!-- TestViewQuestion style -->
    <style name="TextViewQuestionStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/layout_marginBottom_textview</item>
        <item name="android:paddingRight">@dimen/paddingRight_textview</item>
        <item name="android:text">@string/question</item>
        <item name="android:textSize">@dimen/font_sizeSmall</item>
    </style>

    <!-- TestViewQuestionNumber style -->
    <style name="TextViewQuestionNumberStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginBottom">@dimen/layout_marginBottom_textview</item>
        <item name="android:paddingRight">@dimen/paddingRight_textviewLg</item>
        <item name="android:textSize">@dimen/font_sizeSmall</item>
    </style>

    <!-- TextViewScore style -->
    <style name="TextViewScoreStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:paddingLeft">@dimen/paddingLeft_textview</item>
        <item name="android:paddingRight">@dimen/paddingRight_textview</item>
        <item name="android:textSize">@dimen/font_sizeSmall</item>
        <item name="android:text">@string/score</item>
    </style>

    <!-- TextViewScoreCount style -->
    <style name="TextViewScoreCountStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/layout_marginBottom_textview</item>
        <item name="android:text">@string/zero</item>
        <item name="android:textSize">@dimen/font_sizeSmall</item>
    </style>

    <!-- ImageView style -->
    <style name="ImageViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/paddingTopSmall</item>
        <item name="android:paddingBottom">@dimen/paddingBottomSmall</item>
    </style>

    <!-- Radio group style -->
    <style name="RadioGroupStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/radioGroup_layoutMargin</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Radio button style -->
    <style name="RadioButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/radioButton_layoutMarginBottom</item>
        <item name="android:background">@color/grayLight</item>
    </style>

    <!-- Button style -->
    <style name="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/button_layout_marginBottom</item>
        <item name="android:textAllCaps">false</item>"
    </style>

    <!-- Checkbox style -->
    <style name="CheckboxStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/layout_marginBottomSmall</item>
        <item name="android:background">@color/grayLight</item>
        <item name="android:checked">false</item>
    </style>

</resources>